<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical">
        <TableLayout android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="45dp">
            <TableRow>
                <ImageView android:layout_marginLeft="20dp" android:src="@drawable/menu48"/>
                <EditText android:layout_marginLeft="20dp" android:hint="Tên Sách Cần Tìm"/>
                <ImageView android:layout_marginLeft="5dp" android:src="@drawable/search48"/>
                <ImageView android:layout_marginLeft="45dp" android:src="@drawable/user"/>
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/docnhieu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="140dp"
            android:text="Sách Đọc Nhiều Nhất"
            android:textSize="23sp" />

        <Button
            android:id="@+id/rutgon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="132dp"
            android:layout_toEndOf="@+id/docnhieu"
            android:layout_toRightOf="@+id/docnhieu"
            android:background="@drawable/seemore" />

        <ImageView
            android:id="@+id/dacnhantam"
            android:layout_width="80dp"
            android:layout_height="180dp"
            android:layout_below="@+id/docnhieu"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/dacnhantam" />

        <ImageView
            android:id="@+id/healthy"
            android:layout_width="80dp"
            android:layout_height="180dp"
            android:layout_below="@+id/docnhieu"
            android:layout_toRightOf="@+id/dacnhantam"

            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/heal" />

        <ImageView
            android:id="@+id/journey"
            android:layout_width="80dp"
            android:layout_height="180dp"
            android:layout_below="@+id/docnhieu"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/healthy"
            android:src="@drawable/bookjourneys" />
        <ImageView
            android:id="@+id/thems"
            android:layout_width="80dp"
            android:layout_height="180dp"
            android:layout_below="@+id/docnhieu"
            android:layout_toRightOf="@+id/journey"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/bookhealth" />

        <ImageView
            android:id="@+id/self"
            android:layout_width="80dp"
            android:layout_height="180dp"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="11dp"
            android:layout_below="@+id/dacnhantam"
            android:layout_marginTop="80dp"
            android:src="@drawable/bookself" />

        <ImageView
            android:id="@+id/gif"
            android:layout_width="80dp"
            android:layout_height="180dp"
            android:layout_below="@+id/dacnhantam"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="80dp"
            android:layout_toRightOf="@+id/self"
            android:src="@drawable/bookgif" />

        <ImageView
            android:id="@+id/walk"
            android:layout_width="80dp"
            android:layout_height="180dp"
            android:layout_toRightOf="@+id/gif"
            android:layout_below="@+id/dacnhantam"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/walk" />
        <ImageView
            android:id="@+id/them2"
            android:layout_width="80dp"
            android:layout_height="180dp"
            android:layout_toRightOf="@+id/walk"
            android:layout_below="@+id/dacnhantam"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/walk" />

        <TextView
            android:id="@+id/text1"
            android:layout_marginLeft="13dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dacnhantam"
            android:text="Đắc Nhân Tâm_Dale Carnegie"/>
        <TextView
            android:id="@+id/text2"
            android:layout_marginLeft="13dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/healthy"
            android:layout_toRightOf="@+id/text1"
            android:text="Chữa Lành Nỗi Đau_NXB Tp HCM"/>
        <TextView
            android:id="@+id/text3"
            android:layout_marginLeft="13dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/healthy"
            android:layout_toRightOf="@+id/text2"
            android:text="Journeys Success_Dr.Jason Carthen"/>
        <TextView
            android:id="@+id/txt1"
            android:layout_marginLeft="13dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/healthy"
            android:layout_toRightOf="@+id/text3"
            android:text="Journeys Success_Dr.Jason Carthen"/>
        <TextView
            android:id="@+id/text4"
            android:layout_marginLeft="13dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/self"
            android:text="Self Publish_Jolle"/>
        <TextView
            android:id="@+id/text5"
            android:layout_marginLeft="13dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gif"
            android:layout_toRightOf="@+id/text4"
            android:text="Dành Cho Mẹ _ NXB TP HCM"/>
        <TextView
            android:id="@+id/text6"
            android:layout_marginLeft="13dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/walk"
            android:layout_toRightOf="@+id/text5"
            android:text="Leap Year_Jess Kuemmerlin"/>
        <TextView
            android:id="@+id/txt2"
            android:layout_marginLeft="13dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/walk"
            android:layout_toRightOf="@+id/text6"
            android:text="Leap Year_Jess Kuemmerlin"/>


    </RelativeLayout>
</ScrollView>

