<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem"/>
        <ImageView
            android:id="@+id/img"
            android:layout_marginLeft="20dp"
            android:layout_width="90dp"
            android:layout_height="130dp"
            android:src="@drawable/tuoitre"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/nameBook"
            android:layout_below="@+id/img"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:text="Ten Sach"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tacGia"
            android:layout_below="@+id/nameBook"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:text="Tac gia"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem "/>
        <ImageView
            android:id="@+id/img2"
            android:layout_marginLeft="20dp"
            android:layout_width="90dp"
            android:layout_height="130dp"
            android:src="@drawable/me_you"/>
        <TextView
            android:id="@+id/nameBook2"
            android:layout_below="@+id/img"
            android:layout_marginLeft="10dp"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:text="Ten Sach"/>
        <TextView
            android:id="@+id/tacGia2"
            android:layout_below="@+id/nameBook"
            android:layout_marginLeft="10dp"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:text="Tac gia"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem "/>
