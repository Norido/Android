<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MatHangActivity">

    <TextView
        android:id="@+id/title_cthd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/setting"
        android:text="Quản lý chi tiết hóa đơn"
        android:textSize="30sp"
        android:gravity="center"/>

    <ListView
        android:id="@+id/listview_dschitiethoadon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_cthd">

    </ListView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_chitiethoadon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/chon"
        android:backgroundTint="@color/setting"
        android:visibility="invisible"
        />
    <include layout="@layout/layout_fab"/>
</RelativeLayout>